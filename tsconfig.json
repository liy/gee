{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ES2020",
    // pixi start
    // Required for importing 3rd-party dependencies like EventEmitter3
    "esModuleInterop": true,
    // Loaders needs this to use the more strict mini-signal types
    "paths": {
      "mini-signals": ["node_modules/resource-loader/typings/mini-signals.d.ts"]
    },
    "baseUrl": "./src"
    // pixi end
  },
  "include": ["./src/**/*", "./web/**/*", "bin/RepositoryReaderProcess.ts"]
}
