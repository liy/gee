{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ESNext",
    "jsx": "react",
    "baseUrl": "./src",
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./web/**/*", "bin/RepositoryReaderProcess.ts"]
}
