{
  "name": "gee",
  "version": "0.0.1",
  "description": "My Electron application description",
  "main": "dist/main.js",
  "scripts": {
    "start": "npx concurrently --kill-others --names \"electron,web,cli\" --prefix-colors \"green,yellow,grey\" \"npm run start-electron\" \"npm run watch-web\" \"npm run watch-cli\"",
    "start-electron": "node esbuild-electron.js && electron . --repo ./repo",
    "watch-web": "node esbuild-web.js --watch",
    "watch-cli": "node esbuild-cli.js --watch",
    "typecheck": "tsc -p ./tsconfig.json",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "rebuild-native": "npx electron-rebuild -f -b",
    "test": "jest",
    "build": "node esbuild-electron.js && node esbuild-web.js && node esbuild-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liy/gee.git"
  },
  "bin": {
    "gee": "./dist/cli.js"
  },
  "author": {
    "name": "liy",
    "email": "liy8272@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/liy/gee/issues"
  },
  "homepage": "https://github.com/liy/gee#readme",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gee"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "@pixi/unsafe-eval": "^6.0.4",
    "@types/chokidar": "^2.1.3",
    "@types/commander": "^2.12.2",
    "@types/express": "^4.17.13",
    "@types/minimist": "^1.2.2",
    "@types/node-ipc": "^9.1.5",
    "@types/nodegit": "^0.27.3",
    "@types/stats.js": "^0.17.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "concurrently": "^6.2.0",
    "electron": "^13.1.7",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^2.3.5",
    "electron-reload": "^1.5.0",
    "esbuild": "^0.12.15",
    "esbuild-plugin-sass": "^0.5.2",
    "eslint": "^7.31.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "fastify": "^3.19.2",
    "minimist": "^1.2.5",
    "module-alias": "^2.2.2",
    "nodegit": "^0.27.0",
    "pixi.js": "^6.0.4",
    "stats.js": "^0.17.0"
  }
}
