{
  "name": "gee",
  "version": "0.0.1",
  "description": "My Electron application description",
  "main": "dist/main.js",
  "build": {
    "extraResources": [
      "./dist/**"
    ]
  },
  "scripts": {
    "start-electron": "node esbuild-electron.js && electron .",
    "watch-web": "node esbuild-web.js --watch",
    "watch-electron": "node esbuild-electron.js --watch",
    "start": "npx concurrently --kill-others --names \"electron,web\" --prefix-colors \"green,yellow,grey\" \"npm run watch-electron\" \"npm run watch-web\"",
    "typecheck": "tsc -p ./tsconfig.json",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "rebuild-native": "npx electron-rebuild -f -b",
    "test": "jest",
    "build": "node esbuild-electron.js && node esbuild-web.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liy/gee.git"
  },
  "bin": {
    "gee": "./dist/cli.js"
  },
  "author": {
    "name": "liy",
    "email": "liy8272@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/liy/gee/issues"
  },
  "homepage": "https://github.com/liy/gee#readme",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gee"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "liy",
              "name": "gee"
            },
            "draft": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@pixi/unsafe-eval": "^6.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/commander": "^2.12.2",
    "@types/minimist": "^1.2.2",
    "@types/stats.js": "^0.17.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "concurrently": "^6.3.0",
    "electron": "^15.3.0",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.3",
    "electron-reload": "^1.5.0",
    "esbuild": "^0.13.12",
    "esbuild-plugin-sass": "^0.6.0",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "^2.25.2",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "grpc-tools": "^1.11.2",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.19.0",
    "@codemirror/lang-javascript": "^0.19.3",
    "@codemirror/theme-one-dark": "^0.19.1",
    "@grpc/grpc-js": "^1.4.3",
    "@grpc/proto-loader": "^0.6.6",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "electron-squirrel-startup": "^1.0.0",
    "minimist": "^1.2.5",
    "module-alias": "^2.2.2",
    "pixi.js": "^6.2.0",
    "stats.js": "^0.17.0"
  }
}
